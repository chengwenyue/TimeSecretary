<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/fragment3"
             tools:context="justita.top.timesecretary.fragment.AlarmFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="10dp">
            <Button
                android:id="@+id/close_alarm_bt"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:background="@drawable/bt_bg_alarm_selected"
                android:text="关闭提醒"
                android:textSize="16sp"
                android:textColor="@color/white"/>
            <Button
                android:id="@+id/start_alarm_bt"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bt_bg_alarm"
                android:text="开始提醒"
                android:textSize="16sp"
                android:textColor="@color/fragment3"/>
            <Button
                android:id="@+id/end_alarm_bt"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:background="@drawable/bt_bg_alarm"
                android:text="结束提醒"
                android:textSize="16sp"
                android:textColor="@color/fragment3"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center">
            <Button
                android:id="@+id/advance_5"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:background="@drawable/bt_bg_alarm"
                android:text="提前五分钟"
                android:textColor="@color/fragment3"/>
            <Button
                android:id="@+id/advance_15"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bt_bg_alarm"
                android:text="提前十分钟"
                android:textColor="@color/fragment3"/>
            <Button
                android:id="@+id/advance_30"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:background="@drawable/bt_bg_alarm"
                android:text="提前半小时"
                android:textColor="@color/fragment3"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
