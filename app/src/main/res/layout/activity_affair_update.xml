<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    tools:context="justita.top.timesecretary.activity.AffairAddActivity">

    <include
        layout="@layout/activity_back_icon"/>

    <TextView
        style="@style/MainTitleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="修改事件"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/rule">
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        >

        <TextView
            style="@style/AffairCategoryStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="事件名称"/>

        <EditText
            android:id="@+id/input_affair_name"
            style="@style/AffairAddName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            style="@style/AffairCategoryStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="备注"/>

        <EditText
            android:id="@+id/input_affair_remark"
            style="@style/AffairAddRemark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/remark_shape"
            android:gravity="top"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/input_affair_date"
                style="@style/AffairTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/input_affair_time"
                style="@style/AffairTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/save_affair"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_start_login"
                android:text="保存"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_start_register"
                android:text="取消"
                android:textColor="@color/colorPrimary"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
