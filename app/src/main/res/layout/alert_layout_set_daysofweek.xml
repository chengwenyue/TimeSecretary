<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
             >

    <View
        android:layout_width="match_parent"
        android:layout_height="24dp"/>
    <LinearLayout
        android:id="@+id/day_buttons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">
    <Button
        android:layout_width="@dimen/day_button_size"
        android:layout_height="@dimen/day_button_size"
        android:background="@drawable/bt_day_normal"
        android:gravity="center"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginRight="@dimen/day_button_margin"
        android:text="一"/>
    <Button
        android:layout_width="@dimen/day_button_size"
        android:layout_height="@dimen/day_button_size"
        android:background="@drawable/bt_day_normal"
        android:layout_marginRight="@dimen/day_button_margin"
        style="?android:attr/borderlessButtonStyle"
        android:gravity="center"
        android:text="二"/>
    <Button
        android:layout_width="@dimen/day_button_size"
        android:layout_height="@dimen/day_button_size"
        android:background="@drawable/bt_day_normal"
        android:layout_marginRight="@dimen/day_button_margin"
        style="?android:attr/borderlessButtonStyle"
        android:gravity="center"
        android:text="三"/>
    <Button
        android:layout_width="@dimen/day_button_size"
        android:layout_height="@dimen/day_button_size"
        android:background="@drawable/bt_day_normal"
        android:layout_marginRight="@dimen/day_button_margin"
        android:gravity="center"
        style="?android:attr/borderlessButtonStyle"
        android:text="四"/>
    <Button
        android:layout_width="@dimen/day_button_size"
        android:layout_height="@dimen/day_button_size"
        android:background="@drawable/bt_day_normal"
        android:layout_marginRight="@dimen/day_button_margin"
        android:gravity="center"
        style="?android:attr/borderlessButtonStyle"
        android:text="五"/>
    <Button
        android:layout_width="@dimen/day_button_size"
        android:layout_height="@dimen/day_button_size"
        android:background="@drawable/bt_day_normal"
        android:layout_marginRight="@dimen/day_button_margin"
        android:gravity="center"
        style="?android:attr/borderlessButtonStyle"
        android:text="六"/>
    <Button
        android:layout_width="@dimen/day_button_size"
        android:layout_height="@dimen/day_button_size"
        android:background="@drawable/bt_day_normal"
        android:gravity="center"
        style="?android:attr/borderlessButtonStyle"
        android:text="日"/>
    </LinearLayout>
</LinearLayout>